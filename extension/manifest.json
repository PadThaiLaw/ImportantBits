{
  "manifest_version": 2,

  "name": "CanLII heatmap",
  "description": "This extension allows the user to identify most-cited sections of cases from CanLII.",
  "version": "1.0",
    "background": 
    {
        "scripts": ["jquery.js"]
    },
  "content_scripts": [
    {
      "matches" : ["*://www.canlii.org/*"],
      "js": ["jquery.js", "getPara.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>"
  ]
}
